/* ############## VARIABLES ################### */

$chimey : #2e7cff;
$foster : #163282;
$lef : #facc14;
$pelle : #f24141;
$chouffe : #ffdb77;
$ptp : #fde772;




canvas {
  width: 100%;
  height: 100%;
}

body{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-family: 'Roboto';
}

.powerbar{
  height: 100px;
  width: 10px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  display: none;
  .bar{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 10px;
    height: 0%;
    background: #C1676A;

  }
}


#header{
  position: absolute;
  top: 0;
  height: 0px;
  background: #000;
  width: 100%;
  z-index: 50;
  h3{
    color: #fff;
    text-transform: uppercase;
    text-align: center;
  }
  .pl-part{
    left: 0;
    .capsstock{
      left: 20px;
    }
    .life-bloc{
      left: 28px;
    }
  }

  .vl-part{
    right: 0;
    .capsstock{
      right: 20px;
    }
    .life-bloc{
      right: 28px;
    }
  }

  .pl-part, .vl-part{
    position: absolute;
    width: 200px;
    display: none;

    &.chimey{
      .life{
        background: $chimey;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/chimey.png');
      }
    }
    &.foster{
      .life{
        background: $foster;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/foster.png');
      }
    }
    &.lef{
      .life{
        background: $lef;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/lef.png');
      }
    }
    &.pelle{
      .life{
        background: $pelle;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/pelle.png');
      }
    }
    &.chouffe{
      .life{
        background: $chouffe;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/chouffe.png');
      }
    }
    &.ptp{
      .life{
        background: #fcd625;
      }
      .capsstock span{
        background-image: url('../images/ptp_big.png');
      }
    }
  }




  .capsstock{

    width: 50px;
    position: absolute;
    top: 240px;
    span{
      border-radius:50%;
      height: 50px;
      width: 50px;
      display: block;
      margin-top: 10px;
      cursor: pointer;
      background-size: 100% 100%;

    }
  }

  .life-bloc{
    position: absolute;
    top: 80px;
    height: 144px;
    width: 39px;
    background: url(../images/bottle_fond.png);
    .life-c{
      height: 140px;
      width: 35px;
      top: 2px;
      left: 2px;
      overflow: hidden;
      position: absolute;

      -webkit-mask-image: url(../images/bottle_mask.png);
      svg{
        height: 140px;
        width: 35px;
        overflow: hidden;
      }
      .life{
        position: absolute;
        bottom: 0;
        height: 0%;
        padding-bottom: 30px;
        margin-bottom: -35px;
        width: 100%;
        @include transition(.5s);
//        background: #fce68c;
        border-top: 4px solid #fff;
        -webkit-animation-name: wave;
        animation-name : wave;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;

        -webkit-animation-duration: 2s;
        animation-duration: 2s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;

        -webkit-animation-direction: alternate;
        animation-direction: alternate;
      }
    }
  }

}

