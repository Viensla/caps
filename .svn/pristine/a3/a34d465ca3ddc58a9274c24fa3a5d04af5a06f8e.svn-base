@keyframes wave {
  0%, 50%, 100% {
    -webkit-transition-timing-function: linear;
    transition-timing-function: linear;
  }

  0% {
    @include transform(skewY(5deg));
  }

  50%{
    @include transform(skewY(-5deg));

  }

  100% {
    @include transform(skewY(5deg));
  }
}



@-webkit-keyframes wave {
  0%, 50%, 100% {
    -webkit-transition-timing-function: linear;
    transition-timing-function: linear;
  }


  0% {
    @include transform(skewY(5deg));
  }

  50%{
    @include transform(skewY(-5deg));

  }

  100% {
    @include transform(skewY(5deg));
  }
}
