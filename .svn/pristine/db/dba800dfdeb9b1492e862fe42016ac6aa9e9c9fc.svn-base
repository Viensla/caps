header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 175px;
  z-index: 200;
  display: none;
  h1{
    position: absolute;
    height: auto;
    width: 126px;
    top: 25px;
    left: 50%;
    margin-left: -58px;
    img{
      width: 100%;
      height: 100%;
    }
  }
  .bt{
    position: absolute;
    left: 50%;
    margin-left: -552px;
    margin-top: 60px;
  }
}

#lang-select{
  position: fixed;
  top: 20px;
  left: 20px;
  color: rgba(255, 255, 255, 0.8);
  @include neutraUp();
  z-index: 200;
  line-height: 1;
  a{
    display: inline-block;
    position: relative;
    color: #fff;
    text-decoration: none;
    &:after{
      content:" ";
      display: block;
      width: 100%;
      position: absolute;
      top: 16px;
      height: 2px;
      background: #fff;
    }
  }

}