

#game-area{
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
//  display: none;
}

#versus-bar{
  position: absolute;
  left: 50%;
  margin-left: -215px;
  top: 73px;
  z-index: 100;
  width: 430px;
  .line{
    height: 3px;
    width: 100%;
    background: #000;
    position: absolute;
    left: 0;
    right: 0;
    top: 40px;
  }
  img{
    width: 60px;
    height: 60px;
    position: absolute;
    left: 50%;
    top: 13px;
    margin-left: -30px;
  }
  .los{
    position: absolute;
    width: 15px;
    height: 15px;
    background: #000;
    top: 34px;
    @include transform(rotate(45deg));
    &.pl{
      left: 0;
    }
    &.vl{
      right: 0;
    }
    &:after{
      content:" ";
      background: blue;
      position: absolute;
      width: 9px;
      height: 9px;
      margin: 3px;
    }
    &.chimey{
      &:after{
        background: $chimey;
      }
    }
    &.foster{
      &:after{
        background: $foster;
      }
    }
    &.lef{
      &:after{
        background: $lef;
      }
    }
    &.pelle{
      &:after{
        background: $pelle;
      }
    }
    &.chouffe{
      &:after{
        background: $chouffe;
      }
    }
    &.ptp{
      &:after{
        background: $ptp;
      }
    }
  }
}


.powerbar{
  height: 100px;
  width: 10px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  display: none;
  .bar{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 10px;
    height: 0%;
    background: #C1676A;

  }
}


#header{
  position: absolute;
  top: 0;
  height: 0px;
  background: #000;
  width: 100%;
  z-index: 50;
  h3{
    text-transform: uppercase;
    text-align: center;
    position: absolute;
    @include neutraUp();
    color: #000;
    font-size: 20px;
    top: 25px;
  }
  .pl-part{

    left: 50px;
    h3{
      left: 80px;
    }
    .capsstock{
      left: 8px;
    }
    .life-bloc{
      left: 16px;
    }
    .blason{
      left: 0px;
    }
  }

  .vl-part{
    right: 50px;
    h3{
      right: 80px;
    }
    .capsstock{
      right: 8px;
    }
    .life-bloc{
      right: 16px;
    }
    .blason{
      right: 0px;
    }
  }

  .pl-part, .vl-part{
    position: absolute;
    width: 200px;
    display: none;
    top: 80px;

    .blason{
      width: 66px;
      height: 66px;
      @include border-radius(50%);
      position: absolute;
      -webkit-background-size: 70px 70px;
      background-size: 70px 70px;
      background-position: -2px -2px;
    }
    &.chimey{
      .life{
        background: $chimey;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-chimais.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/chimais.png');
      }
    }
    &.foster{
      .life{
        background: $foster;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-faustaire.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/faustaire.png');
      }
    }
    &.lef{
      .life{
        background: $lef;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-lef.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/lef.png');
      }
    }
    &.pelle{
      .life{
        background: $pelle;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-pelle.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/pelle.png');
      }
    }
    &.chouffe{
      .life{
        background: $chouffe;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-shouffe.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/shouffe.png');
      }
    }
    &.ptp{
      .life{
        background: $ptp;
      }
      .blason{
        background-image: url('../images/beers/stickers/rounds/rd-ptp.png');
      }
      .capsstock span{
        background-image: url('../model/3D/caps_material/ptp.png');
      }
    }
  }




  .capsstock{

    width: 50px;
    position: absolute;
    top: 250px;
    span{
      border-radius:50%;
      height: 50px;
      width: 50px;
      display: block;
      margin-top: 10px;
      cursor: pointer;
      background-size: 100% 100%;

    }
  }

  .life-bloc{
    position: absolute;
    top: 90px;
//    height: 144px;
//    width: 39px;
