.viewport{
  position: relative;
}

#sd-messages-box{
  position: absolute;
  z-index: 200;
  bottom: 30px;
  right: 30px;
  background: rgba(255, 255, 255, 0.5);
  color: #000;
  &.disabled{
    display: none;
  }
  li{
    padding: 5px;
    cursor:pointer;
  }

}

#rc-messages-box{
  position: absolute;
  z-index: 200;
  bottom: 110px;
  right: 300px;
  background: #000;
  color: #fff;
  border-radius:5px;
  padding: 10px;
  display: none;
  width: 220px;
  height: 70px;
  text-align: center;
  li{
    width: 100%;
    @include opacity(0);
    @include transition(.3s);
    position: absolute;
    top: 0;
    left: 0;
    padding: 5px;
    cursor:pointer;
    &.sd{
      @include opacity(1);
    }
    p{
      text-align: center;
    }
  }

}


#caps-m, #start-m{
  width: 750px;
  height: 600px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -300px;
  margin-left: -375px;
  overflow: hidden;
  display: none;
  -webkit-background-size: 1000% 300%;
  background-size: 1000% 300%;
  background-position:0% 0%;

  pointer-events:none;
  &.capsIn1, &.capsIn2, &.capsIn3{
    display: block;
  }
}
#caps-m{
  background-image: url('../images/sprites/sprite_caps.png');
}
#start-m{
  background-image: url('../images/sprites/sprite_start.png');
}
.capsIn1{
  @include animation(capsStep1 0.4s steps(9) 0s forwards);
}
.capsIn2{
  @include animation(capsStep2 0.4s steps(9) 0s forwards);
}
.capsIn3{
  @include animation(capsStep3 0.4s steps(9) 0s forwards);
}

@include keyframes(capsStep1) {
  from {
    background-position : 0% 0%;
  }
  to {
    background-position : 100% 0%;
  }
}

@include keyframes(capsStep2) {
  from {
    background-position : 0% 50%;
  }
  to {
    background-position : 100% 50%;
  }
}


@include keyframes(capsStep3) {
  from {
    background-position : 0% 100%;
  }
  to {
    background-position : 100% 100%;
  }
}


@include keyframes(wave){
  0%{
    @include transform(skewY(5deg));
  }
  50%{
    @include transform(skewY(-5deg));
  }
  100%{
    @include transform(skewY(5deg));
  }
}