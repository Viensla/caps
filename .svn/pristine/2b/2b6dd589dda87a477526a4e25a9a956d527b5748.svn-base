#game-area{
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
//  display: none;
}


.powerbar{
  height: 100px;
  width: 10px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  display: none;
  .bar{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 10px;
    height: 0%;
    background: #C1676A;

  }
}


#header{
  position: absolute;
  top: 0;
  height: 0px;
  background: #000;
  width: 100%;
  z-index: 50;
  h3{
    color: #fff;
    text-transform: uppercase;
    text-align: center;
  }
  .pl-part{
    left: 0;
    .capsstock{
      left: 20px;
    }
    .life-bloc{
      left: 28px;
    }
  }

  .vl-part{
    right: 0;
    .capsstock{
      right: 20px;
    }
    .life-bloc{
      right: 28px;
    }
  }

  .pl-part, .vl-part{
    position: absolute;
    width: 200px;
    display: none;

    &.chimey{
      .life{
        background: $chimey;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/chimey.png');
      }
    }
    &.foster{
      .life{
        background: $foster;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/foster.png');
      }
    }
    &.lef{
      .life{
        background: $lef;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/lef.png');
      }
    }
    &.pelle{
      .life{
        background: $pelle;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/pelle.png');
      }
    }
    &.chouffe{
      .life{
        background: $chouffe;
      }
      .capsstock span{
        background-image: url('../images/v2/caps/chouffe.png');
      }
    }
    &.ptp{
      .life{
        background: #fcd625;
      }
      .capsstock span{
        background-image: url('../images/ptp_big.png');
      }
    }
  }




  .capsstock{

    width: 50px;
    position: absolute;
    top: 240px;
    span{
      border-radius:50%;
      height: 50px;
      width: 50px;
      display: block;
      margin-top: 10px;
      cursor: pointer;
      background-size: 100% 100%;

    }
  }

  .life-bloc{
    position: absolute;
    top: 80px;
    height: 144px;
    width: 39px;
    background: url(../images/bottle_fond.png);
    .life-c{
      height: 140px;
      width: 35px;
      top: 2px;
      left: 2px;
      overflow: hidden;
      position: absolute;

      -webkit-mask-image: url(../images/bottle_mask.png);
      svg{
        height: 140px;
        width: 35px;
        overflow: hidden;
      }
      .life{
        position: absolute;
        bottom: 0;
        height: 0%;
        padding-bottom: 30px;
        margin-bottom: -35px;
        width: 100%;
        @include transition(.5s);
        //        background: #fce68c;
        border-top: 4px solid #fff;
        -webkit-animation-name: wave;
        animation-name : wave;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;

        -webkit-animation-duration: 2s;
        animation-duration: 2s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;

        -webkit-animation-direction: alternate;
        animation-direction: alternate;
      }
    }
  }

}

.viewport{
  position: relative;
}

#sd-messages-box{
  position: absolute;
  z-index: 200;
  bottom: 30px;
  right: 30px;
  background: rgba(255, 255, 255, 0.5);
  color: #000;
  &.disabled{
    display: none;
  }
  li{
    padding: 5px;
    cursor:pointer;
  }

}

#rc-messages-box{
  position: absolute;
  z-index: 200;
  bottom: 110px;
  right: 300px;
  background: #000;
  color: #fff;
  border-radius:5px;
  padding: 10px;
  display: none;
  width: 220px;
  height: 70px;
  text-align: center;
  li{
    width: 100%;
    @include opacity(0);
    @include transition(.3s);
    position: absolute;
    top: 0;
    left: 0;
    padding: 5px;
    cursor:pointer;
    &.sd{
      @include opacity(1);
    }
    p{
      text-align: center;
    }
  }

}


#caps-m, #start-m{
  width: 750px;
  height: 600px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -300px;
  margin-left: -375px;
  overflow: hidden;
  display: none;
  -webkit-background-size: 1000% 300%;
  background-size: 1000% 300%;
  background-position:0% 0%;

  pointer-events:none;
  &.capsIn1, &.capsIn2, &.capsIn3{
    display: block;
  }
}
#caps-m{
  background-image: url('../images/sprites/sprite_caps.png');
}
#start-m{
  background-image: url('../images/sprites/sprite_start.png');
}
.capsIn1{
  @include animation(capsStep1 0.4s steps(9) 0s forwards);
}
.capsIn2{
  @include animation(capsStep2 0.4s steps(9) 0s forwards);
}
.capsIn3{
  @include animation(capsStep3 0.4s steps(9) 0s forwards);
}

@include keyframes(capsStep1) {
  from {
    background-position : 0% 0%;
  }
  to {
    background-position : 100% 0%;
  }
}

@include keyframes(capsStep2) {
  from {
    background-position : 0% 50%;
  }
  to {
    background-position : 100% 50%;
  }
}


@include keyframes(capsStep3) {
  from {
    background-position : 0% 100%;
  }
  to {
    background-position : 100% 100%;
  }
}


