.clear {
  clear: both;
}


#bg-test {
  position: fixed;
  z-index: 1;
  width: 100%;
  top:0
}

canvas {
  width: 100%;
  height: 100%;
}

body{
  width: 100%;
  //height: 100%;
  margin: 0;
  padding: 0;
  //overflow: hidden;
  font-family:$aleoReg;
  color: #fff;
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
  -o-font-smoothing: antialiased;
  font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: #eebc66;
}

h3{
  font-size: 25px;
  &.blck{
    color: #000;
  }
  &.wh{
    color: #fff;
  }
}


section.sc{
  position: relative;
  width: 100%;
  .sc-content{
    line-height: 1;
    display: inline-block;
    vertical-align: middle;
    h2{
      font-size: 25px;
      color: #fff;
      letter-spacing: 3px;
      text-align: center;
      @include neutraUp();
    }
  }
}


#wrapper{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;

  #site-content{
    position: relative;
  }
}

.bt{
  cursor:pointer;

  p{
    font-family: $neutra;
    text-align: center;
    text-transform: uppercase;
  }
  &.wh{
    padding: 15px;
    border: 1px solid #fbf4e9;
    p{

      font-size: 14px;
      text-align: center;
      text-transform: uppercase;
      color: #fff;
      font-weight: bold;
      vertical-align: middle;
    }
  }
  &.lgt-close{
    .cl{
      width: 13px;
      height: 13px;
      margin: 0 auto 8px;
      display: block;
      &:after, &:before{
        content:" ";
        width: 1px;
        height: 14px;
        position: absolute;
        background: #fff;
        margin-left: 6px;
      }
      &:after{
        @include transform(rotate(45deg));
      }
      &:before{
        @include transform(rotate(-45deg));
      }
    }
  }
}

.bt-cap{
  width: 104px;
  height: 104px;

  p{
    color: #fff;
    font-size: 12px;
    line-height: 20px;
    padding: 35px 20px;
  }
  
  &.green{
    background-image: url('../images/pictos/cap_bt_green.png');
    -webkit-background-size: 104px;
    background-size: 104px;
  }
}


















