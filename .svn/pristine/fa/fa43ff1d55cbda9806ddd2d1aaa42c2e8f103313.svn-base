#start-screen{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 20;
//  display: none;

  .beers-selector{

    position: absolute;
    top: 30%;
    width: 500px;
    left: 50%;
    margin-left: -250px;

    .beer{
      width: 130px;
      height: 130px;
      display: inline-block;
      margin-left: 20px;
      padding: 10px;

      cursor: pointer;
      &:first-child{
        margin-left: 0;
      }
      &.selected{
        border-radius:50%;
        background: #fff;
      }
      img{
        width: 100%;
        height: 100%;

      }
    }
  }


  #party{
    font-family: 'Roboto', sans-serif;
    font-weight: bold;
    position: absolute;
    top: 70%;
    left: 50%;
    background: #fff;
    padding: 72px 30px;
    text-transform: uppercase;
    font-size: 30px;
    z-index: 20;
    cursor: pointer;
    margin-left: -87px;
    margin-top: -87px;
    border: 2px solid #000;
    border-radius:50%;
  }

}



