
/* ############## VARIABLES ################### */
$brw: #ffd079;
$chimey : #2e7cff;
$foster : #163282;
$lef : #facc14;
$pelle : #f24141;
$chouffe : #ffdb77;
$ptp : #fde772;




@mixin keyframes ($name) {
  @-webkit-keyframes #{$name} { @content; }
  @-moz-keyframes #{$name} { @content; }
  @-o-keyframes #{$name} { @content; }
  @-ms-keyframes #{$name} { @content; }
}

@mixin animation ($anim) {
  -webkit-animation: $anim;
  -moz-animation: $anim;
  -o-animation: $anim;
  -ms-animation: $anim;
  animation : $anim;
}

@mixin animation-play-state ($state){
  -webkit-animation-play-state: $state;
  -moz-animation-play-state: $state;
  -ms-animation-play-state: $state;
  -o-animation-play-state: $state;
  animation-play-state: $state;
}


@mixin animation-timing-function ($state){
  -webkit-animation-timing-function: $state;
  -moz-animation-timing-function: $state;
  -ms-animation-timing-function: $state;
  -o-animation-timing-function: $state;
  animation-timing-function: $state;
}




@mixin mask-size($val) {
  -webkit-mask-size: $val;
  -moz-mask-size: $val;
  -ms-mask-size: $val;
  -o-mask-size: $val;
  mask-size: $val;
}
@mixin mask($val) {
  -webkit-mask: $val;
  -moz-mask: $val;
  -ms-mask: $val;
  -o-mask: $val;
  mask: $val;
}
