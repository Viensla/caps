/* ############## VARIABLES ################### */

$lucidaGrandeBold : "LucidaGrandeBold";
$lucidaGrande : "LucidaGrande";
$seoptimist : "SEOptimist";

$flux : 900px;
$headerH : 60px;


canvas {
  width: 100%;
  height: 100%
}

body{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.powerbar{
  height: 100px;
  width: 10px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  display: none;
  .bar{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 10px;
    height: 0%;
    background: #C1676A;

  }
}

#header{
  position: absolute;
  top: 0;
  height: 70px;
  background: #fedc2a;
  width: 100%;
  z-index: 50;
  h3{
    color: #fff;
    text-transform: uppercase;
    text-align: center;
  }
  .pl-part{
    position: absolute;
    left: 0;
    width: 200px;

    .capsstock, .life-c{
      left: 20px;
    }

    &.chimey{
      .capsstock span{
        background-image: url('../images/chimey_big.png');
      }
    }
    &.foster{
      .capsstock span{
        background-image: url('../images/foster_big.png');
      }
    }
    &.ptp{
      .capsstock span{
        background-image: url('../images/ptp_big.png');
      }
    }
  }

  .vl-part{
    position: absolute;
    right: 0;
    width: 200px;
    .capsstock, .life-c{
      right: 20px;
    }
    .capsstock span{
      background-image: url('../images/ptp_big.png');
    }
  }


  .capsstock{
    display: none;
    width: 50px;
    position: absolute;
    top: 300px;
    span{
      border-radius:50%;
      height: 50px;
      width: 50px;
      display: block;
      margin-top: 10px;
      cursor: pointer;
      background-size: 100% 100%;

    }
  }

  .life-c{
    height: 140px;
    width: 35px;
    top: 80px;
    overflow: hidden;
    position: absolute;

    -webkit-mask-image: url(../images/bottle_mask.png);
    svg{
      height: 140px;
      width: 35px;
      overflow: hidden;
    }
    .life{
      position: absolute;
      bottom: 0;
      height: 0%;
      padding-bottom: 30px;
      margin-bottom: -35px;
      width: 100%;
      @include transition(.5s);
      background: #fce68c;
      border-top: 4px solid #fff;

      -webkit-animation-name: wave;
      animation-name : wave;

      -webkit-animation-iteration-count: infinite;
      animation-iteration-count: infinite;

      -webkit-animation-duration: 2s;
      animation-duration: 2s;
      -webkit-animation-fill-mode: both;
      animation-fill-mode: both;

      -webkit-animation-direction: alternate;
      animation-direction: alternate;
    }
  }
}




.popin-drink-it{
  position: absolute;
  height: 500px;
  width: 500px;
  top: 50%;
  left: 50%;
  margin-left: -250px;
  margin-top: -250px;
  z-index: 100;
  .cache{
    border-radius:50%;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    overflow: hidden;
    border:2px solid  #C1676A;
    background: #fff;
    canvas{
    }
  }

}

#caps-m, #turn-m, #winner-m{
  font-size: 110px;
  text-transform: uppercase;
  text-align: center;
  position: absolute;
  width: 100%;
  top: 30%;
  display: none;
  color: #fff;
  z-index: 30;
}

#turn-m{
  font-size: 50px;
  top: 10%;
}



#black_filter{
  background: #000;
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity:0.4;
}



@keyframes wave {
  0%, 50%, 100% {
    -webkit-transition-timing-function: linear;
    transition-timing-function: linear;
  }

  0% {
    @include transform(skewY(5deg));
  }

  50%{
    @include transform(skewY(-5deg));

  }

  100% {
    @include transform(skewY(5deg));
  }
}



@-webkit-keyframes wave {
  0%, 50%, 100% {
    -webkit-transition-timing-function: linear;
    transition-timing-function: linear;
  }


  0% {
    @include transform(skewY(5deg));
  }

  50%{
    @include transform(skewY(-5deg));

  }

  100% {
    @include transform(skewY(5deg));
  }
}
