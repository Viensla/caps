<section class="sc" id="gamearea">
    <div class="sc-content">
    <div id="caps-game">
        <div class="powerbar"><div class="bar"></div></div>
        <div id="black_filter"></div>


        <div id="header">
            <div id="mute">Mute</div>

            <div class="pl-part chimey">
                <h3>You</h3>
                <div class="capsstock">
                </div>

                <div class="life-bloc">

                    <div class="life-c">

                        <!-- SVG begins -->
                        <svg>

                            <!-- Definition of a mask begins -->
                            <defs>
                                <mask id="mask" maskUnits="userSpaceOnUse" maskContentUnits="userSpaceOnUse">
                                    <image width="35px" height="140px" xlink:href="images/bottle_mask.png"></image>
                                </mask>
                            </defs>
                            <!-- Definition of a mask ends -->

                            <foreignObject width="35px" height="140px" style="mask: url(#mask);">

                                <!-- HTML begins -->
                                <div class="life"></div>
                                <!-- HTML ends -->

                            </foreignObject>
                        </svg>
                        <!-- SVG ends -->

                    </div>
                </div>

            </div>
            <div class="vl-part">
                <h3>Enemy</h3>
                <div class="capsstock">
                </div>

                <div class="life-bloc">
                    <div class="life-c">
                        <!-- SVG begins -->
                        <svg>

                            <!-- Definition of a mask begins -->
                            <defs>
                                <mask id="mask_2" maskUnits="userSpaceOnUse" maskContentUnits="userSpaceOnUse">
                                    <image width="35px" height="140px" xlink:href="images/bottle_mask.png"></image>
                                </mask>
                            </defs>
                            <!-- Definition of a mask ends -->

                            <foreignObject width="35px" height="140px" style="mask: url(#mask_2);">

                                <!-- HTML begins -->
                                <div class="life"></div>
                                <!-- HTML ends -->

                            </foreignObject>
                        </svg>
                        <!-- SVG ends -->

                    </div>
                </div>
            </div>
        </div>



        <div id="start-screen">

            <div class="beers-selector">
                <div class="beer chimey selected">
                    <img src="images/v2/caps/chimey.png" alt=""/>
                </div>
                <div class="beer foster">
                    <img src="images/v2/caps/foster.png" alt=""/>
                </div>
                <div class="beer lef">
                    <img src="images/v2/caps/lef.png" alt=""/>
                </div>
                <div class="beer pelle">
                    <img src="images/v2/caps/pelle.png" alt=""/>
                </div>
                <div class="beer chouffe">
                    <img src="images/v2/caps/chouffe.png" alt=""/>
                </div>
                <div class="beer ptp">
                    <img src="images/ptp_big.png" alt=""/>
                </div>
            </div>

            <div id="party">Party !</div>

        </div>

        <div id="caps-m"></div>


        <div id="viewport"></div>

    </div>
    </div>
</section>