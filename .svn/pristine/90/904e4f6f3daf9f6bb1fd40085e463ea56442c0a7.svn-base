#pickcaps{
  //display: none;
  background: #000;
  color: #fff;
  overflow: hidden;
  .sc-content{
    width: 100%;
    h3, h4, h5{
      text-align: center;


    }
  }
  .title-c{
    position: relative;
    z-index: 20;
    h3{
      font-size: 25px;
      color: #54e1d5;
      margin-bottom: 7px;
    }
    h4{
      font-size: 25px;
    }
    hr{
      width: 106px;
      height: 4px;
      background: #8b8e95;
      border:0px;
      margin: 20px auto 74px;
    }
  }
  #beer-slide-c{
    width: 880px;
    height: 400px;
    margin: 0 auto;
    position: relative;
    z-index: 10;

    .nav-bottle{
      position: relative;
      z-index: 20;
      margin: 40px auto;
      display:table;
      li{
        cursor: pointer;
        display: inline-block;
        margin: 17px;
        width: 10px;
        height: 28px;
        position: relative;
        background-image: url('../images/pictos/empty_bottle.png');
        -webkit-background-size: 10px 28px;
        background-size: 10px 28px;
        z-index: 2;
        &:after{
          content:" ";
          z-index: 3;
          display: block;
          position: absolute;
          top: 0;
          left: 0;
          width: 10px;
          height: 28px;
          background-image: url('../images/pictos/full_bottle.png');
          -webkit-background-size: 10px 28px;
          background-size: 10px 28px;
          @include transition(.3s);
          @include opacity(0);
          @include transform(scale(0));
        }
        &.act{
          &:after{
            @include opacity(1);
            @include transform(scale(1));
          }
        }
      }
    }

    .arw{
      position: absolute;
      top: 110px;
      width: 18px;
      height: 18px;
      border-left:1px solid #fff;
      border-top:1px solid #fff;
      z-index: 20;
      cursor: pointer;
      @include transition(.2s);
      &.lf-arw{
        @include transform(rotate(-45deg) scale(0.8));
        left: 0px;
        &:hover{
          @include transform(rotate(-45deg) scale(1));
        }
      }
      &.rg-arw{
        @include transform(rotate(135deg) scale(0.8));
        right: 0px;
        &:hover{
          @include transform(rotate(135deg) scale(1));
        }
      }
    }
    ul.cap-list{
      height: 280px;
      position: relative;
      z-index: 10;
      li{
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        @include transition(.5s);
        &.lf{
          //@include filter(blur(3px));
          @include opacity(0);
          @include transform(translate3D(-100%, 0 ,0));
          .mention{
            @include transform(translate3D(-100%, 0 ,0));
            @include opacity(0);

          }
        }
        &.rg{
          //@include filter(blur(3px));
          @include opacity(0);
          @include transform(translate3D(100%, 0 ,0));
          .mention{
            @include transform(translate3D(100%, 0 ,0));
            @include opacity(0);

          }
        }
        &.na{
          @include transition(0s);
        }

        .blason{
          width: 222px;
          display: block;
          margin: 0 auto 20px;
          img{
            width: 100%;
            height: auto;
          }
        }
        .mention{
          @include transition-duration(.5s);
          @include transition-delay(.1s);

          p{
            font-size: 14px;
            font-family: $neutra;
            text-transform: uppercase;
            text-align: center;
            span{
              font-family: $aleoReg;
              font-size: 40px;
              vertical-align: middle;
            }
          }
        }
      }
    }
  }

  #beer-bg-slider{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    width: 100%;
    height: 100%;
    overflow: hidden;
    .blc-msk{
//      background-image: url('../images/mask/blc_mask.png');
//      -webkit-background-size: 100% 100%;
//      background-size: 100% 100%;
      position: absolute;
      z-index: 10;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: #000;
      @include transition(.5s);
      @include mask(url('../images/mask/blc_mask.png') no-repeat center center);
      @include mask-size(100% 100%);


      &.ptp{
        background: #291909;
      }
      &.lef{
        background: #1a1606;
      }
      &.chouffe{
        background: #0f1d0d;
      }
      &.pelle{
        background: #2b0f0f;
      }
      &.chimey{
        background: #0a1425;
      }
      &.foster{
        background: #131825;
      }

      //width: 956px;
      //height: 686px;
      //left: 50%;
      //top: 50%;
      //margin-left: -478px;
      //margin-top: -343px;
    }
    li{
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      @include transition-duration(.5s);
      @include transition-delay(.1s);
      background: #40270f;
      z-index: 5;

      @include opacity(0);

      .motifs{
        width: 100%;
        height: 100%;
        background: url('../images/motifs/ptp-motifs.png');
        -webkit-background-size: 100px 100px;
        background-size: 100px 100px;
        @include opacity(0.5);
      }
      &.act{
        @include opacity(1);
      }
      //&.lf{
      //  //@include filter(blur(3px));
      //  @include opacity(0);
      //  @include transform(translateX(-100%));
      //}
      //&.rg{
      //  //@include filter(blur(3px));
      //  @include opacity(0);
      //  @include transform(translateX(100%));
      //}
      &.na{
        @include transition(0s);
      }
      &.ptp{
        background: #40270f;
        .motifs{
          background-image: url('../images/motifs/ptp-motifs.png');
        }
      }
      &.lef{
        background: #2d2508;
        .motifs{
          background-image: url('../images/motifs/lef-motifs.png');
        }
      }
      &.chouffe{
        background: #173212;
        .motifs{
          background-image: url('../images/motifs/shouffe-motifs.png');
        }
      }
      &.pelle{
        background: #3a1515;
        .motifs{
          background-image: url('../images/motifs/pelle-motifs.png');
        }
      }
      &.chimey{
        background: #10264d;
        .motifs{
          background-image: url('../images/motifs/chimais-motifs.png');
        }
      }
      &.foster{
        background: #172754;
        .motifs{
          background-image: url('../images/motifs/faustaire-motifs.png');
        }
      }
    }
  }

  .bt.wh{
    display: table;
    margin: 0 auto;
    padding: 18px 40px;
    position: relative;
    z-index: 50;
  }

}



