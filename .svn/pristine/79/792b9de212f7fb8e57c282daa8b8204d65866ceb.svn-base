<section class="sc" id="multiplayer">
    
    <div class="sc-content">
        <h2>Mode Multijoueur</h2>

        <div class="rt-pt" id="host-part">
            <h3 class="pcfc blck">Je crée ma partie</h3>
            <p class="aleo">Il te suffit de générer un code<br>
                puis de le transmettre à ton adversaire</p>

            <div class="bt bt-cap green" id="host-party">
                <p>Générer un code</p>
            </div>

            <div class="codes-box" id="host-codes">
                <div class="box">
                    <p>Code <input id="room-code" type="text" placeholder="....." readonly /></p>
                </div>
                <div class="box lk">
                    <p>Lien <input id="room-code-lk" type="text"  placeholder="http://payetoncaps.com/#....." readonly/></p>
                </div>
            </div>

            <div class="bt wh" id="start-party">
                <p>Démarrer la partie</p>
            </div>

        </div>

        <div class="separator"></div>

        <div class="lf-pt">
            <h3 class="pcfc blck">Je rejoins une partie</h3>

            <p class="aleo">Entre le code et démarre la partie !</p>

            <div class="codes-box">
                <div class="box">
                    <p>Code <input id="join-code" placeholder="xxxxx"/></p>
                </div>
            </div>

            <div class="bt wh" id="join-party">
                <p>Démarrer la partie</p>
            </div>
    </div>


</section>